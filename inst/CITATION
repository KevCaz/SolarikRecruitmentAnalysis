citHeader("To cite seedlingsRecruitmentAnalysis use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{seedlingsRecruitmentAnalysis}: R functions and scripts for Solarik et al. (2019).",
         author = c(person("Kevin", "Cazelles"),
                    person("Kevin", "Solarik")
                    ),
         year = year,
         note = note,
         url = "https://.github.io/seedlingsRecruitmentAnalysis/")
